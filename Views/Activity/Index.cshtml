@model IEnumerable<CRM.Models.Activity>

@{
    var deals = ViewData["deals"] as List<CRM.Models.Deal>;
    ViewBag.Title = "Activities";
}

@section css{
<link href="~/Content/datatables/datatable.css" rel="stylesheet" />
}

@section scripts{

    <script src="~/Content/datatables/datatable.js"></script>
    <script src="~/Scripts/inc/activity.js"></script>
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Activities</h2>

                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Sales</a></li>
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Activities</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    List
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered first" id="actTable">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Deal</th>
                                    <th>Stage</th>
                                    <th width="20%">View</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var act in Model)
                                {

                                    <tr>
                                        <td>@act.date_created.ToLongDateString()</td>
                                        <td>@deals.Find(d=> d.ID == act.deal_id).title</td>
                                        <td>@act.stage</td>
                                        <td>
                                            <a href="#" onclick="viewActivity(@act.ID)" class="btn btn-sm btn-outline-dark" id="viewPromo" data-toggle="modal" data-target="#bigModal">
                                                <i class="fa fa-eye"></i>
                                            </a>
                            
                                        </td>
                                    </tr>


                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Date</th>
                                    <th>Deal</th>
                                    <th>Stage</th>
                                    <th>View</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model CRM.Models.Promotion
@{ 
    Layout = null;
}

<div class="card mb-3" style="max-width: 760px;">
    <div class="row no-gutters">
        <div class="col-md-4">
            <img src="~/Images/promotion.png" class="card-img" alt="image" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Title: @Model.name</h5>
                <p class="card-text">Code: <strong>@Model.code</strong></p>
                <p class="card-text"><strong>Description:</strong> @Model.description</p>
                <p class="card-text"><small class="text-muted"><strong>External Description:</strong>@Model.ext_desc</small></p>
                <p class="card-text"><strong>Valid Period: </strong>@Model.start.ToLongDateString() - @Model.end.ToLongDateString()</p>
            </div>
        </div>
    </div>
</div>
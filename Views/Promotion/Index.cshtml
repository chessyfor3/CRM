@model IEnumerable<CRM.Models.Promotion>

@{
    ViewBag.Title = "Promotions";
}

@section css{
    <link href="~/Content/datatables/datatable.css" rel="stylesheet" />
}

@section scripts{

    <script src="~/Content/datatables/datatable.js"></script>
    <script src="~/Scripts/inc/promotion.js"></script>
}

<div class="container-fluid  dashboard-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="page-header">
                <h2 class="pageheader-title">Promotions</h2>

                <div class="page-breadcrumb">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Sales</a></li>
                            <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Promotions</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">
                    List
                    <a href="#" onclick="getCreate()" class="btn btn-sm btn-success float-right" id="add" data-toggle="modal" data-target="#bigModal">
                        <i class="fa fa-plus"></i>
                        Add
                    </a>
                </h5>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered first" id="promotionsTable">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Validity Period</th>
                                    <th width="20%">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var promo in Model)
                                {
                                    
                                    <tr>
                                        <td>@promo.code</td>
                                        <td>@promo.name</td>
                                        <td>@promo.start.ToShortDateString() - @promo.end.ToShortDateString()</td>
                                        <td>
                                            <a href="#" onclick="viewPromo(@promo.ID)" class="btn btn-sm btn-outline-dark" id="viewPromo" data-toggle="modal" data-target="#bigModal">
                                                <i class="fa fa-eye"></i>
                                            </a>
                                            &nbsp; | &nbsp;
                                            <a href="#" onclick="editPromo(@promo.ID,this)" class="btn btn-sm btn-outline-info" id="editPromo" data-toggle="modal" data-target="#bigModal">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            &nbsp; | &nbsp;
                                            <a href="#" onclick="deletePromo(@promo.ID,this)" class="btn btn-sm btn-outline-danger" id="deletePromo">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    

                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Code</th>
                                    <th>Name</th>
                                    <th>Validity Period</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
